FROM node:20-alpine

WORKDIR /app

# Установка зависимостей backend
COPY backend/package*.json ./
RUN npm ci

# Копирование shared (для TypeScript компиляции) - должна быть перед копированием backend
COPY shared/ /shared/

# Копирование исходного кода backend (исключаем shared симлинк)
COPY backend/src ./src
COPY backend/tsconfig.json ./
COPY backend/nest-cli.json ./
COPY backend/jest*.config.js ./
COPY backend/test ./test

# Копируем entrypoint скрипт
COPY backend/docker-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/docker-entrypoint.sh

# В development режиме не собираем проект, запускаем в watch режиме
EXPOSE 3001

ENTRYPOINT ["docker-entrypoint.sh"]
CMD ["npm", "run", "start:dev"]

